@model ExpenseManager.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<div>
    <h1 class="text-center display-4">Log in</h1>
</div>

<form class="mx-auto" asp-action="Login" method="post" style="max-width: 25vw">
    @if (TempData["ErrorMessage"] is not null)
    {
        <div class="alert alert-danger my-3" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" type="email" required />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Password"></label>
        <input class="form-control" asp-for="Password" type="password" required />
    </div>
    <div class="mb-3">
        <input class="form-check-input" asp-for="RememberMe" type="checkbox" />
        <label class="form-check-label" asp-for="RememberMe">Remember me</label>
    </div>
    <button class="btn btn-primary d-block mx-auto text-uppercase w-50" type="submit">Log in</button>
</form>
